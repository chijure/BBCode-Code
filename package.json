{
  "name": "bbcode-support",
  "displayName": "BBCode",
  "description": "Extensión de Visual Studio Code para dar soporte básico a archivos BBCode con resaltado de sintaxis y pares de caracteres automáticos.",
  "version": "1.0.2",
  "publisher": "JuanReateguiSolis",
  "license": "MIT",
  "main": "./extension.js",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chijure/BBCode-Code.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "bbcode"
  ],
  "activationEvents": [
    "onLanguage:bbcode",
    "onCommand:bbcode.preview"
  ],
  "contributes": {
    "languages": [
      {
        "id": "bbcode",
        "aliases": [
          "BBCode",
          "bbcode"
        ],
        "extensions": [
          ".bbcode"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bbcode",
        "scopeName": "source.bbcode",
        "path": "./syntaxes/bbcode.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "bbcode.preview",
        "title": "BBCode: Vista previa",
        "category": "BBCode"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "bbcode.preview",
          "group": "navigation",
          "when": "editorLangId == bbcode"
        }
      ]
    }
  }
}
