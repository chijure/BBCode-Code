{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BBCode",
  "scopeName": "source.bbcode",
  "patterns": [
    { "include": "#tag" }
  ],
  "repository": {
    "tag": {
      "patterns": [
        {
          "name": "meta.tag.bbcode",
          "begin": "(\\[)(\\/)?([a-zA-Z][a-zA-Z0-9_-]*)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.tag.begin.bbcode" },
            "2": { "name": "keyword.operator.tag.close.bbcode" },
            "3": { "name": "entity.name.tag.bbcode" }
          },
          "end": "(\\])",
          "endCaptures": {
            "1": { "name": "punctuation.definition.tag.end.bbcode" }
          },
          "patterns": [
            {
              "name": "meta.attribute.bbcode",
              "match": "(\\s+)([a-zA-Z][a-zA-Z0-9_-]*)(\\s*=\\s*)(\"[^\"]*\"|'[^']*'|[^\\]\\s]+)",
              "captures": {
                "2": { "name": "entity.other.attribute-name.bbcode" },
                "3": { "name": "keyword.operator.assignment.bbcode" },
                "4": { "name": "string.unquoted.bbcode" }
              }
            },
            {
              "name": "meta.attribute.bbcode",
              "match": "(=)(\"[^\"]*\"|'[^']*'|[^\\]]+)",
              "captures": {
                "1": { "name": "keyword.operator.assignment.bbcode" },
                "2": { "name": "string.unquoted.bbcode" }
              }
            }
          ]
        }
      ]
    }
  }
}
